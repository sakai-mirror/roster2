<table cellspacing="0" cellpadding="0" class="listHier rosterTable" id="roster_form_rosterTable">
	<thead>
		<tr>
            <th width="35%"><a href="#">{{translate 'facet_name'}}</a></th>
			{{#if viewUserDisplayId}}
                <th width="25%"><a href="#">{{translate 'facet_userId'}}</a></th>
            {{/if}}
			{{#if viewEmail}}
				<th width="25%"><a href="#">{{translate 'facet_email'}}</a></th>
            {{/if}}
            <th width="15%"><a href="#">{{translate 'facet_role'}}</a></th>
		</tr>
	</thead>
	<tbody>
	{{#unless membership.length}}
		<tr>
			<td>{{translate 'no_participants'}}</td>
			{{#if viewUserDisplayId}}
				<td></td>
			{{/if}}
			{{#if viewEmail}}
				<td></td>
			{{/if}}
			<td></td>
		</tr>
	{{else}}
		{{#each membership}}
			<tr onMouseOver="this.className='rosterTableRowHighlight'" onMouseOut="this.className='rosterTableRow'">
                <td>
                {{#if ../../viewProfile}}
                    <a href="javascript:;" class="profile" rel="{{formattedProfileUrl}}">
                {{/if}}
                {{#if ../../firstNameLastName}}
                    {{displayName}}
                {{else}}
                    {{sortName}}
                {{/if}}
                {{#if ../../viewProfile}}
                    </a>
                {{/if}}
                </td>
				{{#if ../../viewUserDisplayId}}
                <td>{{displayId}}</td>
                {{/if}}
				{{#if ../../viewEmail}}
					<td><a href="mailto:{{email}}">{{email}}</a></td>
				{{/if}}
				<td>{{role}}</td>
			</tr>
		{{/each}}
	{{/unless}}
	</tbody>
</table>
